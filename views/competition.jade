extends layout

block content
  h1= title
  form(method="post" novalidate role="form")
    fieldset
    legend Enter competition info
    div(class="form-group")
      label(for="name") Name:
      input(type='text' class="form-control" id="name" name="name" value=competition.name placeholder="Enter competition name" required)
    div(class="form-group")
      label(for="club") Club:
      input(type='text' class="form-control" id="club" name="club" value=competition.club placeholder="Enter club name" required)
    div(class="form-group")
      label(for="description") Description:
      input(type='textbox' class="form-control" id="description" name="description" value=competition.description placeholder="Enter competition description" required)
    div(class="row")
    - if (!isNew)
      div(class="col-sm-6")
        button(type="submit" class="btn btn-default" formaction=deleteAction style="font-size:17px;")
          span.glyphicon.glyphicon-remove-circle  Delete
    div(class="col-sm-6")
      button(type="submit" class="btn btn-primary" formaction=saveAction style="font-size:17px;")
        span.glyphicon.glyphicon-ok-circle  Save