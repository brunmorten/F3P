extends layout

block content
  h1= title
  form(method="post" novalidate role="form")
    fieldset
    legend Manoeuvre
    div(class="form-group")
        label(for="name") Name:
        input(type='textbox' class="form-control" id="name" name="name" value=manoeuvre.name placeholder="Enter manoeuvre name" required)
      div(class="form-group")
        label(for="description") Description:
        input(type='textbox' class="form-control" id="description" name="description" value=manoeuvre.description placeholder="Enter manoeuvre description" required)
      div(class="form-group")
        label(for="kfactor") K-Factor:
        input(type='number' class="form-control" id="kfactor" name="kfactor" value=manoeuvre.k_factor placeholder="Enter manoeuvre K-Factor" required)
    div(class="row")
    - if (!manoeuvre.isNew)
      div(class="col-sm-6")
        button(type="submit" class="btn btn-default" formaction=manoeuvre.deleteAction)
          span.glyphicon.glyphicon-remove-circle  Delete
    div(class="col-sm-6")
      button(type="submit" class="btn btn-primary" formaction=manoeuvre.saveAction)
        span.glyphicon.glyphicon-ok-circle  Save